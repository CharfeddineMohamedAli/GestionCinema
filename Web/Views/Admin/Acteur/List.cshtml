@model Web.Models.AdminViewModel
@{
    Layout = null;
}
<div id="Acteur" class="col-lg-6">

    <h2>ActeurList</h2>
        <div class="panel panel-default">
            <div class="panel-heading">
              
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">                 
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-acteur" role="grid" aria-describedby="dataTables-example_info">
                                    <thead>
                                        <tr>
                                            <th>
                                                Nom
                                            </th>
                                            <th>
                                                Prenom
                                            </th>
                                            <th>
                                                Note
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Acteurs)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NomActeur)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PrenomActeur)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NoteActeur)
                                                </td>
                                                <td>
                                                    <a class="btn btn-group-sm btn-default" href="/Admin/EditActeur/@item.ActeurId"><i class="fa fa-pencil fa-fw"></i></a>
                                                    <a class="btn btn-group-sm btn-primary" href="/Admin/DetailsActeur/@item.ActeurId"><i class="fa fa-info-circle fa-fw"></i></a>
                                                    <a class="del-acteur btn btn-group-sm btn-danger" url="/Admin/DeleteActeur/@item.ActeurId" data-toggle="modal" data-target="#Modal-DeleteActeur" href="#"><i class=" fa fa-trash-o fa-fw"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>   
                </div>
                <!-- /.table-responsive -->
                <div class="well">

                    <a class="btn btn-success btn-lg btn-block" target="_blank" href="/Admin/CreateActeur"><i class="fa fa-plus-circle fa-fw"></i></a>
                   
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
</div>






<div class="modal fade danger" id="Modal-DeleteActeur" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
               
            </div>
            <div id="del-acteur" class="modal-body">
            </div>
            <div class="modal-footer">
               
            </div>
        </div>
    </div>
</div>