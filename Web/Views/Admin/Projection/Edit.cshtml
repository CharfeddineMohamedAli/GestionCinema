@model Domain.Entity.Projection

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBackOffice.cshtml";
}


<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Projection</h4>
