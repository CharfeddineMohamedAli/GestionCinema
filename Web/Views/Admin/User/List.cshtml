@model Web.Models.AdminViewModel
@{
    Layout = null;
}

<h2>UserList</h2>

<div class="col-lg-12">

    <div class="panel panel-default">
        <div class="panel-heading">

            <a style="margin-left:95%;" class="btn btn-success" href="/Admin/CreateUser"><i class="fa fa-plus-circle fa-fw"></i></a>
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-user">
                    <thead>
                        <tr>
                            <th>
                                User Name
                            </th>
                            <th>
                                Email
                            </th>

                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Active
                            </th>
                            <th>
                                Create Date
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                              
                                <td style="padding:2px;">
                                    <a class="btn btn-group-sm btn-default" href="/Admin/EditUser/@item.UserId"><i class="fa fa-pencil fa-fw"></i></a>
                                    <a class="btn btn-group-sm btn-primary" href="/Admin/DetailsUser/@item.UserId"><i class="fa fa-info-circle fa-fw"></i></a>
                                    <a class="del-user btn btn-group-sm btn-danger" url="/Admin/DeleteUser/@item.UserId" data-toggle="modal" data-target="#Modal-DeleteUser" href="#"><i class=" fa fa-trash-o fa-fw"></i></a>

                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <div class="well">
            </div>
        </div>
    </div>
</div>


<div class="modal fade danger" id="Modal-DeleteUser" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div id="del-user" class="modal-body">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>























