@model Web.Models.AdminViewModel

@{
   
    Layout = null;
}

<h2>ParticipationList</h2>

<div class="col-lg-12">

    <div class="panel panel-default">
        <div class="panel-heading">

            <a style="margin-left:95%;" class="btn btn-success" href="/Admin/CreateParticipation"><i class="fa fa-plus-circle fa-fw"></i></a>
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-participation">
                    <thead>
                        <tr>
                            <th>
                                Event
                            </th>
                            <th>
                                Participant
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Participations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Event.Titre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Username)
                                </td>
                                <td style="padding:2px;">
                                    <a class="btn btn-group-sm btn-default" href="/Admin/EditParticipation/@item.ParticipationId"><i class="fa fa-pencil fa-fw"></i></a>
                                    <a class="btn btn-group-sm btn-primary" href="/Admin/DetailsParticipation/@item.ParticipationId"><i class="fa fa-info-circle fa-fw"></i></a>
                                    <a class="del-part btn btn-group-sm btn-danger" url="/Admin/DeleteParticipation/@item.ParticipationId" data-toggle="modal" data-target="#Modal-DeleteParticipation" href="#"><i class=" fa fa-trash-o fa-fw"></i></a>

                                </td>
                               
                            </tr>
                        }
                       

                    </tbody>
                </table>
            </div>
            <div class="well">
            </div>
        </div>
    </div>
</div>





























<div class="modal fade danger" id="Modal-DeleteParticipation" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div id="del-part" class="modal-body">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>