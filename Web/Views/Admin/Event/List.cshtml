@model Web.Models.AdminViewModel
@{
    Layout = null;
}

<h2>EventList</h2>
<div class="col-lg-12">

    <div class="panel panel-default">
        <div class="panel-heading">

            <a style="margin-left:95%;" class="btn btn-success" href="/Admin/CreateEvent"><i class="fa fa-plus-circle fa-fw"></i></a>
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-event">
                    <thead>
                        <tr>
                            <th>
                                Début
                            </th>
                            <th>
                                Fin
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Titre
                            </th>
                            <th>
                                Adresse
                            </th>
                            <th>
                                Capacité
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Events)
                        {
                            string color = "";
                            if (item.DateFin < DateTime.Now)
                            {
                                color = "color: red;opacity: 0.7;";
                            }
                            <tr style="@color">
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateDebut)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateFin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adresse.FormattedAdress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capacite)
                                </td>
                                <td style="padding:2px;">
                                    <a class="btn btn-group-sm btn-default" href="/Admin/EditEvent/@item.EventId"><i class="fa fa-pencil fa-fw"></i></a>
                                    <a class="btn btn-group-sm btn-primary" href="/Admin/DetailsEvent/@item.EventId"><i class="fa fa-info-circle fa-fw"></i></a>
                                    <a class="del-event btn btn-group-sm btn-danger" url="/Admin/DeleteEvent/@item.EventId" data-toggle="modal" data-target="#Modal-DeleteEvent" href="#"><i class=" fa fa-trash-o fa-fw"></i></a>

                                </td>
                               
                            </tr>
                        }
                      
                    </tbody>
                </table>
            </div>
            <div class="well">
            </div>
        </div>
    </div>
</div>

<div class="modal fade danger" id="Modal-DeleteEvent" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div id="del-event" class="modal-body">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
